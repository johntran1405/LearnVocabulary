<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudchinh">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bài Nghe"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#0af231"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bài"
        android:textSize="20dp"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb_media" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonPlay"
            android:onClick="play"
            android:src="@android:drawable/ic_media_play"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonPause"
            android:onClick="stop"
            android:src="@android:drawable/ic_media_pause"
            />

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:text="Question?"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/txtquestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#000"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>
    <RadioGroup
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg_answer">
        <RadioButton
            android:id="@+id/rb_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
        <RadioButton
            android:id="@+id/rb_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>
        <RadioButton
            android:id="@+id/rb_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
        <RadioButton
            android:id="@+id/rb_answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/bt_kiemtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiểm tra"
            android:background="@drawable/blue_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_tieptheo"
            android:onClick="nextBai"
            android:text="Tiếp theo"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blue_button"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtdapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFF0000"/>
</LinearLayout>
